# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_size = 2
indent_style = space

[*.xml]
indent_size = 4

# Don't corrupt git patch edit files
[.git/**/*.diff]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
