{
  "name": "@lib.cam/xslt-nailgun",
  "version": "0.0.0-beta.1",
  "description": "Execute XSLT with SAXON in a separate JVM with low overhead",
  "keywords": [
    "xslt",
    "saxon",
    "java",
    "jvm"
  ],
  "homepage": "https://bitbucket.org/CUDL/node-xslt-nailgun",
  "bugs": {
    "url": "https://bitbucket.org/CUDL/node-xslt-nailgun/issues"
  },
  "license": "MIT",
  "repository": "bitbucket:CUDL/node-xslt-nailgun",
  "engines": {
    "node": ">=v8"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "docs": "typedoc --ignoreCompilerErrors --out docs src",
    "test": "jest",
    "ci-test": "jest --ci --reporters=default --reporters=jest-junit",
    "lint": "tslint --project tsconfig.json",
    "prepack": "echo \"Error: You can't pack/publish from the un-built repo root, use \\`make\\` to build\" >&2; false",
    "_prepack": "[ \"$(git status --porcelain)\" = '' ] || exit 1"
  },
  "author": {
    "name": "Hal Blackburn",
    "email": "hwtb2@cam.ac.uk"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.27",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.17",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/node": "^12.6.9",
    "@types/promise.allsettled": "^1.0.1",
    "@types/ringbufferjs": "^1.1.0",
    "@types/stream-buffers": "^3.0.3",
    "glob": "^7.1.4",
    "jest": "^24",
    "jest-junit": "^8.0.0",
    "jest-xml-matcher": "^1.1.1",
    "tmp-promise": "^2.0.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.15.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "dev-null": "^0.1.1",
    "get-port": "^5.0.0",
    "json-stable-stringify": "^1.0.1",
    "object.values": "^1.1.0",
    "p-finally": "^2.0.1",
    "promise.allsettled": "^1.0.1",
    "readable-stream": "^3.4.0",
    "ringbufferjs": "^1.1.0",
    "stream-buffers": "^3.0.2",
    "trace-error": "^1.0.3"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ]
  },
  "uk.ac.cam.lib.cudl.xslt-nailgun": {
    "serverJarsPath": "java/target/jars"
  },
  "files": [
    "**/*.js",
    "**/*.map",
    "**/*.ts",
    "jars/*.jar"
  ],
  "jest-junit": {
    "outputDirectory": "test-reports",
    "outputName": "jest.xml"
  }
}
