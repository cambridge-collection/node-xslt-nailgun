{
  "name": "@lib.cam/xslt-nailgun",
  "version": "0.2.0",
  "description": "Execute XSLT with SAXON in a separate JVM with low overhead",
  "keywords": [
    "xslt",
    "saxon",
    "java",
    "jvm"
  ],
  "homepage": "https://bitbucket.org/CUDL/node-xslt-nailgun",
  "bugs": {
    "url": "https://bitbucket.org/CUDL/node-xslt-nailgun/issues"
  },
  "license": "MIT",
  "repository": "bitbucket:CUDL/node-xslt-nailgun",
  "engines": {
    "node": ">=v8"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "test": "npm run $([ \"$CI\" = true ] && echo ci-test || echo non-ci-test)",
    "non-ci-test": "jest",
    "ci-test": "jest --ci --reporters=default --reporters=jest-junit",
    "integration-test": "integration-test/run-all.sh",
    "lint": "tslint --project tsconfig.json",
    "prepack": "echo \"Error: You can't pack/publish from the un-built repo root, use \\`make\\` to build\" >&2; false",
    "_prepack": "[ \"$(git status --porcelain)\" = '' ] || exit 1",
    "check": "gts check",
    "fix": "gts fix",
    "posttest": "npm run check"
  },
  "author": {
    "name": "Hal Blackburn",
    "email": "hwtb2@cam.ac.uk"
  },
  "devDependencies": {
    "@types/bl": "^2.1.0",
    "@types/bluebird": "^3.5.29",
    "@types/debug": "^4.1.5",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.9.0",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/node": "^13.1.8",
    "@types/promise.allsettled": "^1.0.2",
    "@types/ringbufferjs": "^1.1.0",
    "glob": "^7.1.6",
    "gts": "^1.1.2",
    "jest": "^24.9.0",
    "jest-junit": "^10.0.0",
    "jest-xml-matcher": "^1.2.0",
    "supports-color": "^7.1.0",
    "tmp-promise": "^2.0.2",
    "ts-jest": "^24.3.0",
    "tslint": "^6.0.0",
    "typedoc": "^0.15.8",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@types/tapable": "^1.0.5",
    "bl": "^4.0.0",
    "debug": "^4.1.1",
    "json-stable-stringify": "^1.0.1",
    "object.values": "^1.1.1",
    "p-finally": "^2.0.1",
    "promise.allsettled": "^1.0.2",
    "readable-stream": "^3.5.0",
    "ringbufferjs": "^1.1.0",
    "tapable": "^1.1.3",
    "trace-error": "^1.0.3",
    "xml-name-validator": "^3.0.0"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ]
  },
  "uk.ac.cam.lib.cudl.xslt-nailgun": {
    "serverJarsPath": "java/target/jars"
  },
  "files": [
    "**/*.js",
    "**/*.map",
    "**/*.ts",
    "jars/*.jar"
  ],
  "jest-junit": {
    "outputDirectory": "test-reports",
    "outputName": "jest.xml"
  }
}
