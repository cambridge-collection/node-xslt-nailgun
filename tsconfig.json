{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "outDir": "build/dist-root/lib",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "resolveJsonModule": true,
    "rootDirs": [
      "src",
      "lib"
    ],
    "sourceMap": true,
    "sourceRoot": "../src"
  },

  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
